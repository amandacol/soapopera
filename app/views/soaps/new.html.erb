<div class="container text-center mt-5 bg-info p-5 rounded">
  <h1>Create a new Soap </h1>

  <%= simple_form_for @soap do |f| %>
    <div>
      <%= f.input :name %>
    </div>
    <div>
     <%= f.input :scent %>
    </div>
    <div>
     <%= f.input :properties%>
    </div>
    <div>
     <%= f.input :price%>
    </div>
    <div>
     <%= f.input :weight%>
    </div>

    <div>
      <%= f.button :submit, class: 'btn btn-warning mb-3' %>
    </div>
  <% end %>

  <%= link_to("Back to list", root_path) %>
</div>
