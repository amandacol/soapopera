<% soap = Soap.with_deleted.joins(:orders).where(orders: order).first %>

<div class="card-product">
  <div class="align-items-center">
  <% if soap.photo.attached? %>
    <%= cl_image_tag order.soap.photo.key, width: 400, crop: :fill %>
  <% else %>
    <img src="https://images.unsplash.com/photo-1570194065650-821cfb9b44a1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=334&q=80" />
  <% end %>
  </div>
  <div class="card-product-infos">
    <h2><%= soap.name %></h2>
    <p><strong>R$</strong><%= soap.price %><%= link_to '<i class="far fa-trash-alt ml-2"></i>'.html_safe, order_path(order.id), method: :delete, data: { confirm: 'Are you sure?' }%></p>

  </div>
</div>
